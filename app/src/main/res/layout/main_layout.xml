<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_height="match_parent"
             android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             android:background="@color/white"

>
    <FrameLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@color/white"

    >
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
        >

            <RelativeLayout android:layout_width="match_parent"
                            android:id="@+id/r_l"
                            android:layout_height="80dp"
                            android:background="@color/theme">
                <TextView android:layout_width="200dp"
                          android:id="@+id/user_name"
                          android:layout_height="40dp"
                          android:text="点餐系统"
                          android:textColor="@color/white"
                          android:textSize="24sp"
                          android:textStyle="bold"
                          android:layout_marginStart="20dp"
                          android:layout_marginTop="20dp"
                          android:paddingTop="3dp"
                          android:paddingStart="15dp"

                />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/recycler_view"
            >

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>


        <androidx.cardview.widget.CardView
                android:layout_width="320dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/add_card"
                android:background="@color/white"
                android:layout_marginTop="100dp"
                android:layout_marginStart="440dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="600dp"
                app:cardElevation="50dp">
            <ScrollView android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                              android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            app:cardBackgroundColor="@color/white"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            app:cardCornerRadius="@dimen/radius"
                            app:cardElevation="3dp"
                    >


                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:orientation="horizontal"
                        >
                            <LinearLayout android:layout_width="match_parent"
                                          android:layout_height="wrap_content"
                                          android:orientation="vertical"
                            >


                                <TextView android:layout_width="match_parent"
                                          android:layout_height="50dp"
                                          android:textColor="@color/black"
                                          android:textSize="20sp"
                                          android:paddingStart="20sp"
                                          android:paddingEnd="20sp"
                                          android:paddingTop="5dp"
                                          android:text="酸辣土豆丝"
                                          android:textStyle="bold"
                                >
                                </TextView>
                                <LinearLayout android:layout_width="match_parent"
                                              android:layout_height="wrap_content"
                                              android:orientation="horizontal"
                                >
                                    <TextView android:layout_weight="1"
                                              android:layout_width="match_parent"
                                              android:layout_height="50dp"
                                              android:textColor="@color/black"
                                              android:layout_marginTop="2dp"
                                              android:textSize="15sp"
                                              android:text="价格: ￥5.00"
                                              android:paddingStart="20sp"
                                              android:paddingEnd="30sp"
                                              android:gravity="center"
                                    >
                                    </TextView>
                                <TextView android:layout_width="match_parent"
                                          android:layout_weight="1.5"
                                          android:layout_height="50dp"
                                          android:textColor="@color/black"
                                          android:layout_marginTop="2dp"
                                          android:textSize="15sp"
                                          android:text="数量: ×1"
                                          android:paddingStart="20sp"
                                          android:paddingEnd="30sp"
                                          android:gravity="center"
                                >
                                </TextView>


                            </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            app:cardBackgroundColor="@color/white"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            app:cardCornerRadius="@dimen/radius"
                            app:cardElevation="3dp"
                    >


                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:orientation="horizontal"
                        >
                            <LinearLayout android:layout_width="match_parent"
                                          android:layout_height="wrap_content"
                                          android:orientation="vertical"
                            >


                                <TextView android:layout_width="match_parent"
                                          android:layout_height="50dp"
                                          android:textColor="@color/black"
                                          android:textSize="20sp"
                                          android:paddingStart="20sp"
                                          android:paddingEnd="20sp"
                                          android:paddingTop="5dp"
                                          android:text="麻婆豆腐"
                                          android:textStyle="bold"
                                >
                                </TextView>
                                <LinearLayout android:layout_width="match_parent"
                                              android:layout_height="wrap_content"
                                              android:orientation="horizontal"
                                >
                                    <TextView android:layout_weight="1"
                                              android:layout_width="match_parent"
                                              android:layout_height="50dp"
                                              android:textColor="@color/black"
                                              android:layout_marginTop="2dp"
                                              android:textSize="15sp"
                                              android:text="价格: ￥3.00"
                                              android:paddingStart="20sp"
                                              android:paddingEnd="30sp"
                                              android:gravity="center"
                                    >
                                    </TextView>
                                    <TextView android:layout_width="match_parent"
                                              android:layout_weight="1.5"
                                              android:layout_height="50dp"
                                              android:textColor="@color/black"
                                              android:layout_marginTop="2dp"
                                              android:textSize="15sp"
                                              android:text="数量: ×1"
                                              android:paddingStart="20sp"
                                              android:paddingEnd="30sp"
                                              android:gravity="center"
                                    >
                                    </TextView>


                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            app:cardBackgroundColor="@color/white"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            app:cardCornerRadius="@dimen/radius"
                            app:cardElevation="3dp"
                    >


                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:orientation="horizontal"
                        >
                            <LinearLayout android:layout_width="match_parent"
                                          android:layout_height="wrap_content"
                                          android:orientation="vertical"
                            >


                                <TextView android:layout_width="match_parent"
                                          android:layout_height="50dp"
                                          android:textColor="@color/black"
                                          android:textSize="20sp"
                                          android:paddingStart="20sp"
                                          android:paddingEnd="20sp"
                                          android:paddingTop="5dp"
                                          android:text="辣子鸡"
                                          android:textStyle="bold"
                                >
                                </TextView>
                                <LinearLayout android:layout_width="match_parent"
                                              android:layout_height="wrap_content"
                                              android:orientation="horizontal"
                                >
                                    <TextView android:layout_weight="1"
                                              android:layout_width="match_parent"
                                              android:layout_height="50dp"
                                              android:textColor="@color/black"
                                              android:layout_marginTop="2dp"
                                              android:textSize="15sp"
                                              android:text="价格: ￥15.00"
                                              android:paddingStart="20sp"
                                              android:paddingEnd="30sp"
                                              android:gravity="center"
                                    >
                                    </TextView>
                                    <TextView android:layout_width="match_parent"
                                              android:layout_weight="1.5"
                                              android:layout_height="50dp"
                                              android:textColor="@color/black"
                                              android:layout_marginTop="2dp"
                                              android:textSize="15sp"
                                              android:text="数量: ×1"
                                              android:paddingStart="20sp"
                                              android:paddingEnd="30sp"
                                              android:gravity="center"
                                    >
                                    </TextView>


                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            app:cardBackgroundColor="@color/white"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            app:cardCornerRadius="@dimen/radius"
                            app:cardElevation="3dp"
                    >


                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:orientation="horizontal"
                        >
                            <LinearLayout android:layout_width="match_parent"
                                          android:layout_height="wrap_content"
                                          android:orientation="vertical"
                            >


                                <TextView android:layout_width="match_parent"
                                          android:layout_height="50dp"
                                          android:textColor="@color/black"
                                          android:textSize="20sp"
                                          android:paddingStart="20sp"
                                          android:paddingEnd="20sp"
                                          android:paddingTop="5dp"
                                          android:text="玉米排骨汤"
                                          android:textStyle="bold"
                                >
                                </TextView>
                                <LinearLayout android:layout_width="match_parent"
                                              android:layout_height="wrap_content"
                                              android:orientation="horizontal"
                                >
                                    <TextView android:layout_weight="1"
                                              android:layout_width="match_parent"
                                              android:layout_height="50dp"
                                              android:textColor="@color/black"
                                              android:layout_marginTop="2dp"
                                              android:textSize="15sp"
                                              android:text="价格: ￥10.00"
                                              android:paddingStart="20sp"
                                              android:paddingEnd="30sp"
                                              android:gravity="center"
                                    >
                                    </TextView>
                                    <TextView android:layout_width="match_parent"
                                              android:layout_weight="1.5"
                                              android:layout_height="50dp"
                                              android:textColor="@color/black"
                                              android:layout_marginTop="2dp"
                                              android:textSize="15sp"
                                              android:text="数量: ×1"
                                              android:paddingStart="20sp"
                                              android:paddingEnd="30sp"
                                              android:gravity="center"
                                    >
                                    </TextView>


                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            app:cardBackgroundColor="@color/white"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            app:cardCornerRadius="@dimen/radius"
                            app:cardElevation="3dp"
                    >


                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:orientation="horizontal"
                        >
                            <LinearLayout android:layout_width="match_parent"
                                          android:layout_height="wrap_content"
                                          android:orientation="vertical"
                            >


                                <TextView android:layout_width="match_parent"
                                          android:layout_height="50dp"
                                          android:textColor="@color/black"
                                          android:textSize="20sp"
                                          android:paddingStart="20sp"
                                          android:paddingEnd="20sp"
                                          android:paddingTop="5dp"
                                          android:text="米饭"
                                          android:textStyle="bold"
                                >
                                </TextView>
                                <LinearLayout android:layout_width="match_parent"
                                              android:layout_height="wrap_content"
                                              android:orientation="horizontal"
                                >
                                    <TextView android:layout_weight="1"
                                              android:layout_width="match_parent"
                                              android:layout_height="50dp"
                                              android:textColor="@color/black"
                                              android:layout_marginTop="2dp"
                                              android:textSize="15sp"
                                              android:text="价格: ￥5.00"
                                              android:paddingStart="20sp"
                                              android:paddingEnd="30sp"
                                              android:gravity="center"
                                    >
                                    </TextView>
                                    <TextView android:layout_width="match_parent"
                                              android:layout_weight="1.5"
                                              android:layout_height="50dp"
                                              android:textColor="@color/black"
                                              android:layout_marginTop="2dp"
                                              android:textSize="15sp"
                                              android:text="数量: ×5"
                                              android:paddingStart="20sp"
                                              android:paddingEnd="30sp"
                                              android:gravity="center"
                                    >
                                    </TextView>


                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            app:cardBackgroundColor="@color/white"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            app:cardCornerRadius="@dimen/radius"
                            app:cardElevation="3dp"
                    >


                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:orientation="horizontal"
                        >
                            <LinearLayout android:layout_width="match_parent"
                                          android:layout_height="wrap_content"
                                          android:orientation="vertical"
                            >


                                <TextView android:layout_width="match_parent"
                                          android:layout_height="50dp"
                                          android:textColor="@color/black"
                                          android:textSize="20sp"
                                          android:paddingStart="20sp"
                                          android:paddingEnd="20sp"
                                          android:paddingTop="5dp"
                                          android:text="水蒸蛋"
                                          android:textStyle="bold"
                                >
                                </TextView>
                                <LinearLayout android:layout_width="match_parent"
                                              android:layout_height="wrap_content"
                                              android:orientation="horizontal"
                                >
                                    <TextView android:layout_weight="1"
                                              android:layout_width="match_parent"
                                              android:layout_height="50dp"
                                              android:textColor="@color/black"
                                              android:layout_marginTop="2dp"
                                              android:textSize="15sp"
                                              android:text="价格: ￥12.00"
                                              android:paddingStart="20sp"
                                              android:paddingEnd="30sp"
                                              android:gravity="center"
                                    >
                                    </TextView>
                                    <TextView android:layout_width="match_parent"
                                              android:layout_weight="1.5"
                                              android:layout_height="50dp"
                                              android:textColor="@color/black"
                                              android:layout_marginTop="2dp"
                                              android:textSize="15sp"
                                              android:text="数量: ×2"
                                              android:paddingStart="20sp"
                                              android:paddingEnd="30sp"
                                              android:gravity="center"
                                    >
                                    </TextView>


                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </ScrollView>
            <Button android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="250dp"
                    android:layout_marginLeft="0dp"
                    android:text="√"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_selector"

            />
        </androidx.cardview.widget.CardView>
    </FrameLayout>
    <ImageView android:layout_width="50dp"
               android:layout_height="50dp"
               android:padding="10dp"
               android:id="@+id/plus"
               android:src="@drawable/plus"
               android:layout_marginTop="12dp"
               android:layout_marginStart="300dp"
               android:layout_marginEnd="10dp"
               android:shadowDx="5"
               android:shadowDy="5"
               android:shadowRadius="10"
    />
</FrameLayout>