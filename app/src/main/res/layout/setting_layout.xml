<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_height="match_parent"
              android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:fitsSystemWindows="true"
              android:background="@color/huise">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/white">
        <TextView android:layout_width="200dp"
                  android:id="@+id/user_name"
                  android:layout_height="40dp"
                  android:text="王庆松"
                  android:textColor="@color/black"
                  android:textSize="20sp"
                  android:textStyle="bold"
                  android:layout_marginStart="20dp"
                  android:layout_marginTop="20dp"
                  android:paddingTop="3dp"
                  android:paddingStart="15dp"

        />
    </RelativeLayout>
    <androidx.cardview.widget.CardView
            android:id="@+id/setting_card_0"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="@color/white"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:cardCornerRadius="@dimen/radius"
            app:cardElevation="4dp"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:id="@+id/setting_linear_0"
                android:orientation="vertical"
                android:fitsSystemWindows="true"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal"
                    android:fitsSystemWindows="true"
            >

                <ImageView android:layout_width="23dp"
                           android:layout_height="23dp"
                           android:id="@+id/setting_image_0"
                           android:layout_marginStart="15dp"
                           android:layout_gravity="center"
                           android:src="@drawable/eth0"
                >
                </ImageView>
                <TextView android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:textColor="@color/black"
                          android:textSize="12sp"
                          android:layout_marginTop="3dp"
                          android:id="@+id/setting_text_0"
                          android:text="https://sepolia.infura.io/v3/42e1865458574ae9b258fc5ac9ba2371"
                          android:gravity="center_vertical"
                          android:layout_gravity="center_vertical"
                          android:layout_marginStart="25dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal"
                    android:fitsSystemWindows="true"
            >

                <TextView android:layout_width="42dp"
                          android:layout_height="match_parent"
                          android:textColor="@color/black"
                          android:textSize="12sp"
                          android:text="区块链\n  地址"
                          android:gravity="center_vertical"
                          android:layout_marginStart="15dp">
                </TextView>
                <EditText android:layout_width="match_parent"
                          android:id="@+id/setting_et_0"
                          android:layout_height="50dp"
                          android:textColor="@color/black"
                          android:textSize="12sp"
                          android:lines="2"
                          android:colorControlNormal ="@color/huise"
                >
                </EditText>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/setting_card_1"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="@color/white"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:cardCornerRadius="@dimen/radius"
            app:cardElevation="4dp"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:id="@+id/setting_linear_1"
                android:orientation="vertical"
                android:fitsSystemWindows="true"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal"
                    android:fitsSystemWindows="true"
            >

                <ImageView android:layout_width="23dp"
                           android:layout_height="23dp"
                           android:id="@+id/setting_image_1"
                           android:layout_marginStart="15dp"
                           android:layout_gravity="center"
                           android:src="@drawable/con0"
                >
                </ImageView>
                <TextView android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:textColor="@color/black"
                          android:textSize="12sp"
                          android:id="@+id/setting_text_1"
                          android:text="0x3CffAF277d905E6414b4264cbeAbC1F0965B3abf"
                          android:gravity="center_vertical"
                          android:layout_marginStart="25dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal"
                    android:fitsSystemWindows="true"
            >

                <TextView android:layout_width="42dp"
                          android:layout_height="match_parent"
                          android:textColor="@color/black"
                          android:textSize="12sp"
                          android:text=" 合约\n 地址"
                          android:gravity="center_vertical"
                          android:layout_marginStart="15dp">
                </TextView>
                <EditText android:layout_width="match_parent"
                          android:id="@+id/setting_et_1"
                          android:layout_height="50dp"
                          android:textColor="@color/black"
                          android:textSize="12sp"
                          android:lines="2"
                          android:colorControlNormal ="@color/huise"
                >
                </EditText>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:id="@+id/setting_card_2"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="@color/white"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:cardCornerRadius="@dimen/radius"
            app:cardElevation="4dp"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:id="@+id/setting_linear_2"
                android:orientation="vertical"
                android:fitsSystemWindows="true"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal"
                    android:fitsSystemWindows="true"
            >

                <ImageView android:layout_width="23dp"
                           android:layout_height="23dp"
                           android:id="@+id/setting_image_2"
                           android:layout_marginStart="15dp"
                           android:layout_gravity="center"
                           android:src="@drawable/gy0"
                >
                </ImageView>
                <TextView android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:textColor="@color/black"
                          android:textSize="12sp"
                          android:id="@+id/setting_text_2"
                          android:text="0xbE447E5A634217ff1ed3284D11f49fEcd227d44e"
                          android:gravity="center_vertical"
                          android:layout_marginStart="25dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal"
                    android:fitsSystemWindows="true"
            >

                <TextView android:layout_width="42dp"
                          android:layout_height="match_parent"
                          android:textColor="@color/black"
                          android:textSize="12sp"
                          android:text=" 账户\n 公钥"
                          android:gravity="center_vertical"
                          android:layout_marginStart="15dp">
                </TextView>
                <EditText android:layout_width="match_parent"
                          android:id="@+id/setting_et_2"
                          android:layout_height="50dp"
                          android:textColor="@color/black"
                          android:textSize="12sp"
                          android:lines="2"
                          android:colorControlNormal ="@color/huise"
                >
                </EditText>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>